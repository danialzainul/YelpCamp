<% include ../partials/header %>

<div class="container">
    <div class="row justify-content-center text-center">
        <div class="col-md-12">
            <h1 class="mb-3">Add a New Comment to <%= campground.name %></h1>
        </div>
        <div class="col-md-5">
            <form action="/campgrounds/<%= campground._id%>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="Comment" autofocus>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds/<%= campground._id %>">Cancel and Return to <%= campground.name %></a>
        </div>
    </div>
</div>

<% include ../partials/footer %>