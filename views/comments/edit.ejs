<% include ../partials/header %>

<div class="container">
    <div class="row justify-content-center text-center">
        <div class="col-md-12">
            <h1 class="mb-3">Edit Comment</h1>
        </div>
        <div class="col-md-5">
            <form action="/campgrounds/<%= campground_id%>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>" autofocus>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Cancel and Return to campgrounds</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>